<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>servlet-app-4</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>RoadTax</param-name>
		<param-value>20</param-value>
	</context-param>



	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.ty.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>Employee</servlet-name>
		<servlet-class>com.ty.controller.EmployeeController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Employee</servlet-name>
		<url-pattern>/employee</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>Car</servlet-name>
		<servlet-class>com.ty.Car</servlet-class>

		<init-param>
			<param-name>RoadTax</param-name>
			<param-value>20</param-value>
		</init-param>

		<init-param>
			<param-name>SeatBelt</param-name>
			<param-value>yes</param-value>
		</init-param>

	</servlet>
	<servlet-mapping>
		<servlet-name>Car</servlet-name>
		<url-pattern>/car</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Teacher</servlet-name>
		<servlet-class>com.ty.Teacher</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Teacher</servlet-name>
		<url-pattern>/teacher</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Teacher</servlet-name>
		<url-pattern>/tom</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Teacher</servlet-name>
		<url-pattern>/jerry</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Student</servlet-name>
		<servlet-class>com.ty.StudentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Student</servlet-name>
		<url-pattern>/student</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MyPerson</servlet-name>
		<servlet-class>com.ty.Person</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyPerson</servlet-name>
		<url-pattern>/myperson</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MyHotel</servlet-name>
		<servlet-class>com.ty.Hotel</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyHotel</servlet-name>
		<url-pattern>/myhotel</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MyRoom</servlet-name>
		<servlet-class>com.ty.Room</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyRoom</servlet-name>
		<url-pattern>/myroom</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>MyBed</servlet-name>
		<servlet-class>com.ty.Bed</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyBed</servlet-name>
		<url-pattern>/mybed</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Welcome</servlet-name>
		<servlet-class>com.ty.Welcome</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Welcome</servlet-name>
		<url-pattern>/mydarling</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Details</servlet-name>
		<servlet-class>com.ty.Welcome</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Details</servlet-name>
		<url-pattern>/alldetails</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Data</servlet-name>
		<servlet-class>com.ty.Data</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Data</servlet-name>
		<url-pattern>/data</url-pattern>
	</servlet-mapping>

</web-app>